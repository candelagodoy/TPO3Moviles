<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.modificar.ModificarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCodigoModificar"
            android:layout_width="244dp"
            android:layout_height="77dp"
            android:layout_marginTop="92dp"
            android:background="@android:drawable/gallery_thumb"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Ingrese el cÃ³digo del producto a modificar"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/material_dynamic_secondary30"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etCodigoIngresado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:ems="10"
            android:hint="Ej: 234"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCodigoModificar" />

        <Button
            android:id="@+id/btBuscarCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar Producto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etCodigoIngresado"
            app:layout_constraintVertical_bias="0.171" />

        <TextView
            android:id="@+id/tvMensajeBusquedaModificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btBuscarCodigo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>